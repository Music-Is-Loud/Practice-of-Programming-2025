var introTitDirect = angular.module('dc.direct.introTitImgDirect', []);
introTitDirect.directive("introtitimgtpl",function(){
	return {
        templateUrl : 'app/direct/tpl/introTitImg.html',
        replace :true,
        controller:'introtitimgtplCtrl'
    };
}).controller('introtitimgtplCtrl',['$scope','$window',function($scope,$window){
	$scope.load = function() { 
		var idx = Math.ceil(Math.random()*9);
    	$(".introTitImg").css("background-image","url(img/img_small"+idx+".jpg)");
    };
}]);